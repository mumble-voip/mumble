- bans
	- server_id
		- INTEGER
		- NOT NULL
	- base
		- BLOB / BINARY(16)
	- mask
		- INTEGER
	- name
		- TEXT (min 255)
	- hash
		- TEXT (min 40)
	- reason
		- TEXT
	- start
		- DATE
	- duration
		- INTEGER
	(* TRIGGER AFTER DELETE ON servers: DELETE FROM bans WHERE server_id = old.server_id)
	* FOREIGN KEY: server_id REFERENCES servers(server_id)
